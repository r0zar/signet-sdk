{
  "name": "signet-sdk",
  "version": "0.1.1",
  "description": "Client-side SDK for integrating websites with the Signet extension",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "signet",
    "chrome-extension",
    "sdk",
    "web3"
  ],
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5.x",
    "eslint": "^9.x",
    "prettier": "^3.x",
    "vitest": "^3.0.7",
    "@vitest/coverage-v8": "^3.0.7",
    "jsdom": "^24.x"
  }
}